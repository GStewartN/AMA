{{#if updateQuestionForm}}
  <h1>Update {{question.author}}'s question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>
        <div class="form-group">
          <label for="content">Question</label>
          {{textarea value=content id="content" placeholder=question.content}}
        </div>
        <div class="form-group">
          <label for="notes">Example Code</label>
          {{textarea value=notes id="notes" placeholder=question.notes}}
        </div>
        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
